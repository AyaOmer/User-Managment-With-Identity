@model AddUserViewModel
@{
    ViewData["Title"] = "Add New User";
}

<form asp-action="Add" method="post">
    <h2>Create a new account.</h2>
    <hr />
    @*Emaill*@

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-floating">
        <input asp-for="Email" class="form-control" autocomplete="Email" aria-required="true" />
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <br />
    @*Emaill*@

    <div class="form-floating">
        <input asp-for="FullName" class="form-control" autocomplete="fullname" aria-required="true" />
        <label asp-for="FullName"></label>
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <br />
    <div class="form-floating">
        <input asp-for="UserName" class="form-control" autocomplete="UserName" aria-required="true" />
        <label asp-for="UserName"></label>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <br />
    <div class="form-floating">
        <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <br />

    <div class="form-floating">
        <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
        <label asp-for="ConfirmPassword"></label>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <hr />
    <h6>Roles</h6>
    @for (int i = 0; i < Model.Roles.Count; i++)
    {
        <div class="form-check m-1">
            <input type="hidden" asp-for="@Model.Roles[i].RoleId" />
            <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
            <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
            <label class="form-check-label" asp-for="@Model.Roles[i].IsSelected">@Model.Roles[i].RoleName</label>
        </div>
    }
    <span asp-validation-for="Roles" class="text-danger"></span>
    <button type="submit" class="w-100 btn btn-lg btn-primary d-block mt-4">Save</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}